pipeline {
    agent any

    stages {

        stage('Checkout Code') {
            steps {
                echo 'Checking out source code'
                git branch: 'main', url: 'https://github.com/MasampelliAnvesh/REALTIMEPROJECT.git'
            }
        }

        stage('Build Jar') {
            steps {
                echo 'Running Maven build'
                sh 'cd Application && mvn clean package'
            }
        }

        // stage('Sonar Scan') {
        //     steps {
        //         echo 'Running SonarQube scan'
        //         sh '''
        //             cd Application
        //             mvn sonar:sonar \
        //               -Dsonar.host.url=http://54.172.47.112:9000/ \
        //               -Dsonar.login=squ_ac14684da1e9cd42d1ae76f1a8a923cb0a08275c

        //         '''
        //     }
        // }

        stage('Build Docker Image') {
            steps {
                script {
                    echo 'Building Docker Image'
                    sh 'cd Application && docker build -t anvesh7036/k8s:${BUILD_NUMBER} .'
                }
            }
        }

        // stage('Docker Image Scan') {
        //     steps {
        //         sh 'trivy image anvesh7036/k8s:${BUILD_NUMBER}'
        //     }
        // }

        stage('Push Image to DockerHub') {
            steps {
                script {
                    withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) {
                        sh 'echo "${dockerhub}" | docker login -u "anvesh7036" --password-stdin'
                    }
                    sh 'docker push anvesh7036/k8s:${BUILD_NUMBER}'
                }
            }
        }

        stage('Update Kubernetes Deployment Manifest File') {
            environment {
                GIT_REPO_NAME = "REALTIMEPROJECT"
                GIT_USER_NAME = "MasampelliAnvesh"
            }
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                        git config user.email "masampellianvesh@gmail.com"
                        git config user.name "MasampelliAnvesh"

                        sed -i "s|k8s:.*|k8s:${BUILD_NUMBER}|g" Ansible/k8s_deployment.yaml

                        git add .
                        git commit -m "Update deployment image tag to version ${BUILD_NUMBER}"
                        git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                    '''
                }
            }
        }

        stage('K8s Deployment using Ansible') {
            steps {
                script {
                    ansiblePlaybook(
                        credentialsId: 'ssh',
                        disableHostKeyChecking: true,
                        installation: 'ansible',
                        inventory: '/etc/ansible/inventory',
                        playbook: 'Ansible/ansible_k8s_deploy_playbook.yaml'
                    )
                }
            }
        }
    }
}
